# Frontend Environment Variables Template
# Copy this file to .env.local and fill in the values

# API Endpoint
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_PROVIDER=sso
VITE_JWT_STORAGE_KEY=jwt_token
VITE_USER_STORAGE_KEY=user_info

# App Configuration
VITE_APP_NAME=HCMUT Tutor Connect
VITE_APP_VERSION=0.0.1
VITE_ENVIRONMENT=development

# Features Toggle
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_MOCK_API=true

# URLs
VITE_APP_URL=http://localhost:5173
VITE_ADMIN_URL=http://localhost:5173/admin
VITE_LOGIN_URL=http://localhost:5173/login
VITE_LOGOUT_URL=http://localhost:5173/login

# Logging
VITE_LOG_LEVEL=debug
VITE_ENABLE_CONSOLE_LOGGING=true

# Third-party Services (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Development Only
VITE_MOCK_API_DELAY=500
